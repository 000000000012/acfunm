<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/message_item_tran_bg"
  >

 <ImageView
     android:id="@+id/message_item_img"
     android:layout_width="48px"
     android:layout_height="48px"
     android:layout_alignParentRight="true"
     android:layout_alignParentTop="true"
     android:src="@drawable/ach" />

 <TextView
     android:id="@+id/message_list_item_txt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_toLeftOf="@+id/message_item_img"
     android:background="@drawable/message_item_bg_l"
     android:padding="20px"
     android:textColor="#000000" />

</RelativeLayout>
