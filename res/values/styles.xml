<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Styled">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:listSelector">@drawable/selectable_background_styled</item>
        <item name="android:progressBarStyleLarge">@style/Widget.ProgressBar.Large.Styled</item>
    </style>
    
    <style name="AppTheme.TranslucentActionBar" >
        <item name="android:actionBarStyle">@style/ActionBar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBar.Transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>
