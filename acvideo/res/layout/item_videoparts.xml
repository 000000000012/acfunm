<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_part"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:focusable="true"
    android:nextFocusRight="@+id/part_overlow"
    android:paddingLeft="@dimen/text_horizontal_padding"
    android:paddingRight="@dimen/text_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
     >
    <TextView 
        android:id="@+id/part_name"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        />
	<TextView 
	    android:id="@+id/part_desc"
	    android:padding="4dp"
	    android:layout_below="@+id/part_name"
	    style="@android:style/TextAppearance.Small"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/text_color_gray"
	    />
	<ImageButton 
	    android:id="@+id/part_overlow"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:nextFocusLeft="@+id/item_part"
	    android:src="@drawable/ic_action_overflow"
	    style="?attr/actionButtonStyle"
	    />
</RelativeLayout>
